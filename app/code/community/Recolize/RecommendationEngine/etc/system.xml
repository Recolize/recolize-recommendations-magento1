<config>
    <tabs>
        <recolize translate="label">
            <label>Recolize</label>
            <sort_order>200</sort_order>
        </recolize>
    </tabs>
    <sections>
        <recolize_recommendation_engine translate="label">
            <class>separator-top</class>
            <label><![CDATA[<img width="90" src="data:image/png;base64," alt="Recolize" /> <br />&nbsp;&nbsp;&nbsp;Recommendation Engine]]></label>
            <class>recolizeRecommendationSection</class>
            <header_css>recolizeRecommendationSectionHeader</header_css>
            <tab>recolize</tab>
            <sort_order>20</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <note translate="label">
                            <label></label>
                            <frontend_type>note</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    <comment><![CDATA[
<ul class="messages"><li class="notice-msg"><ul><li>Don't have a Recolize account yet?<br />You can use Recolize Recommendation Engine for free - just register at <a href="https://www.recolize.com/register" target="_blank">our website</a>.</li></ul></li></ul>]]>
                    </comment>
                        </note>
                        <enable_extension translate="label comment">
                            <label>Enable Extension</label>
                            <comment><![CDATA[If set to 'Yes' the Recolize Recommendation Engine extension is enabled and generates product recommendations according to the below mentioned configuration options and the recommendation engine configuration in the <a href="https://tool.recolize.com" target="_blank">Recolize Tool</a>.<br />If set to 'No' the extension is completely disabled.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_extension>
                        <javascript_snippet translate="label comment">
                            <label>JavaScript Snippet Code</label>
                            <comment><![CDATA[Please enter the JavaScript snippet code here that you got from your domain settings in the <a href="https://tool.recolize.com/domains" target="_blank">Recolize Tool</a>.]]></comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enable_extension>1</enable_extension></depends>
                        </javascript_snippet>
                    </fields>
                </general>
                <product_feed translate="label">
                    <label>Recolize Product Feed Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_export translate="label comment">
                            <label>Enable Product Feed</label>
                            <comment><![CDATA[If set to 'Yes' the Recolize Product Feed will be generated each night. This is required for the Recolize Recommendation Engine to work. The Magento cron has to be correctly set up.<br />You can set this setting to 'No' if you already have other product feeds, like Google Shopping, CSV-based product exports, etc. Then you have to enter these feeds into the <a href="https://tool.recolize.com/domains" target="_blank">Recolize Tool</a>.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_export>
                    </fields>
                </product_feed>
            </groups>
        </recolize_recommendation_engine>
    </sections>
</config>